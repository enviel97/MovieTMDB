{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],

      "@components": ["components"],
      "@components/*": ["components/*"],

      "@constants": ["constants"],
      "@constants/*": ["constants/*"],

      "@stylesHelper": ["root/styles/helpers"],
      "@stylesHelper/*": ["root/styles/helpers/*"],

      "@assets": ["assets"],
      "@assets/*": ["assets/*"],

      "@api": ["root/api"],
      "@api/*": ["root/api/*"],

      "@": ["."],
      "@/*": ["./*"]
    }
  }
}
